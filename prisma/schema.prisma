generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TblRole {
  id        String    @id @default(uuid())
  title     RoleEnum
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  users     TblUser[]

  @@map("tbl_roles")
}

model TblUser {
  id                   String             @id @default(uuid())
  roleId               String             @map("role_id")
  vendorId             String?            @map("vendor_id")
  fullName             String             @map("full_name")
  email                String             @unique
  phone                String?            @unique
  passwordHash         String?            @map("password_hash")
  status               UserStatus         @default(active)
  avatar               String?
  lastLoginAt          DateTime?          @map("last_login_at")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")
  bannersCreated       TblBanner[]        @relation("BannerUserCreated")
  bannersUpdated       TblBanner[]        @relation("BannerUserUpdated")
  categoriesCreated    TblCategories[]    @relation("CategoryUserCreated")
  categoriesUpdated    TblCategories[]    @relation("CategoryUserUpdated")
  productsCreated      TblProduct[]       @relation("UserCreated")
  productsUpdated      TblProduct[]       @relation("UserUpdated")
  subCategoriesCreated TblSubCategories[] @relation("SubCategoryUserCreated")
  subCategoriesUpdated TblSubCategories[] @relation("SubCategoryUserUpdated")
  typeFoodCreated      TblTypeFood[]      @relation("TypeFoodUserCreated")
  typeFoodUpdated      TblTypeFood[]      @relation("TypeFoodUserUpdated")
  role                 TblRole            @relation(fields: [roleId], references: [id])
  vendor               TblVendor?         @relation(fields: [vendorId], references: [id])

  @@map("tbl_users")
}

model TblVendor {
  id           String       @id @default(uuid())
  status       VendorStatus @default(active)
  vendorName   String       @map("vendor_name")
  vendorSlug   String       @unique @map("vendor_slug")
  logo         String?
  banner       String?
  description  String?
  contactPhone String?      @map("contact_phone")
  email        String?
  address      String?
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  products     TblProduct[]
  users        TblUser[]

  @@map("tbl_vendors")
}

model TblProduct {
  id             String            @id @default(uuid())
  status         ProductStatus     @default(draft)
  vendorId       String            @map("vendor_id")
  userCreatedId  String            @map("user_created")
  dateCreated    DateTime          @default(now()) @map("date_created")
  userUpdatedId  String            @map("user_updated")
  dateUpdated    DateTime          @updatedAt @map("date_updated")
  productNameKh  String            @map("product_name_kh")
  productNameEn  String?           @map("product_name_en")
  productNameKo  String?           @map("product_name_ko")
  slug           String            @unique
  description    String?
  discount       Decimal?          @default(0) @db.Decimal(10, 2)
  categoryId     String            @map("category_id")
  subCategoryId  String?           @map("sub_category_id")
  stockQuantity  Int               @default(0) @map("stock_quantity")
  unlimitedStock Boolean           @default(false) @map("unlimited_stock")
  weight         Decimal?          @default(0) @db.Decimal(10, 2)
  mainImage      String            @map("main_image")
  subImages      String[]          @map("sub_images")
  productPrices  TblProductPrice[]
  category       TblCategories     @relation(fields: [categoryId], references: [id])
  subCategory    TblSubCategories? @relation(fields: [subCategoryId], references: [id])
  userCreated    TblUser           @relation("UserCreated", fields: [userCreatedId], references: [id])
  userUpdated    TblUser           @relation("UserUpdated", fields: [userUpdatedId], references: [id])
  vendor         TblVendor         @relation(fields: [vendorId], references: [id])

  @@map("tbl_products")
}

model TblProductPrice {
  id          String      @id @default(uuid())
  productId   String      @map("product_id")
  typeFoodId  String      @map("type_food_id")
  unitLabel   String?     @map("unit_label")
  price       Decimal     @db.Decimal(10, 2)
  currencyId  String      @map("currency_id")
  minOrderQty Int?        @map("min_order_qty")
  maxOrderQty Int?        @map("max_order_qty")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  currency    TblCurrency @relation(fields: [currencyId], references: [id])
  product     TblProduct  @relation(fields: [productId], references: [id])
  typeFood    TblTypeFood @relation(fields: [typeFoodId], references: [id])

  @@map("tbl_product_prices")
}

model TblCategories {
  id            String             @id @default(uuid())
  sort          Int                @default(0)
  userCreatedId String             @map("user_created")
  dateCreated   DateTime           @default(now()) @map("date_created")
  userUpdatedId String             @map("user_updated")
  dateUpdated   DateTime           @updatedAt @map("date_updated")
  nameKh        String             @map("name_kh")
  nameEn        String?            @map("name_en")
  nameKo        String?            @map("name_ko")
  slug          String             @unique
  image         String?
  userCreated   TblUser            @relation("CategoryUserCreated", fields: [userCreatedId], references: [id])
  userUpdated   TblUser            @relation("CategoryUserUpdated", fields: [userUpdatedId], references: [id])
  products      TblProduct[]
  subCategories TblSubCategories[]

  @@map("tbl_categories")
}

model TblSubCategories {
  id            String        @id @default(uuid())
  sort          Int           @default(0)
  userCreatedId String        @map("user_created")
  dateCreated   DateTime      @default(now()) @map("date_created")
  userUpdatedId String        @map("user_updated")
  dateUpdated   DateTime      @updatedAt @map("date_updated")
  nameKh        String        @map("name_kh")
  nameEn        String?       @map("name_en")
  nameKo        String?       @map("name_ko")
  slug          String        @unique
  image         String?
  categoryId    String        @map("category_id")
  products      TblProduct[]
  category      TblCategories @relation(fields: [categoryId], references: [id])
  userCreated   TblUser       @relation("SubCategoryUserCreated", fields: [userCreatedId], references: [id])
  userUpdated   TblUser       @relation("SubCategoryUserUpdated", fields: [userUpdatedId], references: [id])

  @@map("tbl_sub_categories")
}

model TblTypeFood {
  id            String            @id @default(uuid())
  status        TypeFoodStatus    @default(active)
  sort          Int               @default(0)
  userCreatedId String            @map("user_created")
  dateCreated   DateTime          @default(now()) @map("date_created")
  userUpdatedId String            @map("user_updated")
  dateUpdated   DateTime          @updatedAt @map("date_updated")
  title         String
  productPrices TblProductPrice[]
  userCreated   TblUser           @relation("TypeFoodUserCreated", fields: [userCreatedId], references: [id])
  userUpdated   TblUser           @relation("TypeFoodUserUpdated", fields: [userUpdatedId], references: [id])

  @@map("tbl_type_food")
}

model TblCurrency {
  id                String            @id @default(uuid())
  status            CurrencyStatus    @default(active)
  title             String
  symbol            String?
  exchangeRateToUsd Decimal?          @default(1) @map("exchange_rate_to_usd") @db.Decimal(10, 6)
  productPrices     TblProductPrice[]
  shippingRules     TblShipping[]

  @@map("tbl_currency")
}

model TblShipping {
  id               String          @id @default(uuid())
  status           ShippingStatus  @default(active)
  destinationType  DestinationType @map("destination_type")
  destinationTitle String          @map("destination_title")
  destinationCode  String?         @map("destination_code")
  minQuantity      Decimal?        @map("min_quantity") @db.Decimal(10, 2)
  maxQuantity      Decimal?        @map("max_quantity") @db.Decimal(10, 2)
  quantity         Decimal?        @db.Decimal(10, 2)
  unit             ShippingUnit
  price            Decimal         @db.Decimal(10, 2)
  currencyId       String          @map("currency_id")
  route            String?
  sort             Int             @default(0)
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")
  currency         TblCurrency     @relation(fields: [currencyId], references: [id])

  @@map("tbl_shipping")
}

model TblBanner {
  id            String       @id @default(uuid())
  status        BannerStatus @default(active)
  userCreatedId String       @map("user_created")
  dateCreated   DateTime     @default(now()) @map("date_created")
  userUpdatedId String       @map("user_updated")
  dateUpdated   DateTime     @updatedAt @map("date_updated")
  thumbnail     String?
  title         String?
  description   String?
  link          String?
  sort          Int          @default(0)
  userCreated   TblUser      @relation("BannerUserCreated", fields: [userCreatedId], references: [id])
  userUpdated   TblUser      @relation("BannerUserUpdated", fields: [userUpdatedId], references: [id])

  @@map("tbl_banners")
}

enum RoleEnum {
  superadmin
  vendor_admin
  customer
}

enum UserStatus {
  active
  inactive
  blocked
}

enum VendorStatus {
  active
  inactive
}

enum ProductStatus {
  published
  draft
}

enum TypeFoodStatus {
  active
  inactive
}

enum CurrencyStatus {
  active
  inactive
}

enum ShippingStatus {
  active
  inactive
}

enum DestinationType {
  country
  zone
}

enum ShippingUnit {
  kg
  g
  box
}

enum BannerStatus {
  active
  inactive
}
